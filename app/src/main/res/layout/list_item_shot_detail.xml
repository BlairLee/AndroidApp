<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_medium"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shot_view_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_xsmall"
            android:drawableTop="@mipmap/ic_visibility_black_18dp"
            android:drawablePadding="@dimen/spacing_xsmall"
            tools:text="1000" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_xsmall"
                android:src="@mipmap/ic_favorite_border_black_18dp"
                android:background="@null"/>

            <TextView
                android:id="@+id/shot_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"
                tools:text="1000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_xsmall"
                android:src="@mipmap/ic_inbox_black_18dp"
                android:background="@null" />

            <TextView
                android:id="@+id/shot_bucket_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"
                tools:text="1000" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shot_author_picture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="@dimen/spacing_medium"
            android:src="@mipmap/profile_picture"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/shot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/shot_author_picture"
            android:layout_toRightOf="@id/shot_author_picture"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            tools:text="Shot title" />

        <TextView
            android:id="@+id/shot_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/shot_title"
            android:layout_below="@id/shot_title"
            tools:text="Shot author" />

    </RelativeLayout>

    <TextView
        android:id="@+id/shot_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        tools:text="Shot description\nShot description\nShot description\nShot description\n" />

</LinearLayout>