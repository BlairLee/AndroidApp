<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_medium">

    <ImageView
        android:id="@+id/comment_author_picture"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@mipmap/profile_picture" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/spacing_medium_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comment_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Comment author" />

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Comment content\nComment content\nComment content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/comment_created_at"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2 days ago"
                tools:text="2 days ago" />

            <TextView
                android:id="@+id/comment_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/ic_favorite_border_black_18dp"
                android:drawablePadding="@dimen/spacing_xsmall"
                android:text="78"
                tools:text="78" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>